<%= form_with(model: @input, url: options_path, method: :post) do |f| %>
  <div>
    <%= f.label :emotion, "今の気分を入力"%>
    <%= f.text_field :emotion %>
  </div>

  <div>
    <%= f.hidden_field :date, value: Date.today %>
  </div>

  <div>
    <%= f.label :maxtime, "勉強時間"%>
    <%= f.range_field :maxtime, in: 1..12, step: 0.25, id: "slider" %>
    <span id="value">5</span><br>
  </div>

  <div>
    <%= f.submit "タスクを始める" %>
  </div>
<% end %>

